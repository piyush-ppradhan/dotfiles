{
    "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
    "editor.fontSize": 15.5,
    "terminal.integrated.fontSize": 14.5,
    "editor.stickyScroll.enabled":  false,
    "breadcrumbs.enabled": false,
    "editor.guides.indentation": false,
    "editor.folding": false,
    "editor.minimap.autohide": true,
    "editor.minimap.enabled": false,
    "window.titleBarStyle": "custom",
    "scm.diffDecorations": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "vim.useSystemClipboard": true,
    "telemetry.telemetryLevel": "off",
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-s>": false,
        "<C-z>": false,
        "<C-p>": false,
        "<C-t>": false,
        "<C-b>": false
    },
    "git.openRepositoryInParentFolders": "never",
	"vim.mouseSelectionGoesIntoVisualMode": true,
    "workbench.layoutControl.enabled": false,
    "window.commandCenter": false,
    "workbench.activityBar.location": "hidden",
    "workbench.startupEditor": "none",
    "window.menuBarVisibility": "compact",
    "extensions.ignoreRecommendations": true,
    "workbench.colorTheme": "Catppuccin Mocha",
    "catppuccin.italicKeywords": false,
    "catppuccin.italicComments": false,
    "catppuccin.boldKeywords": true,

    "workbench.colorCustomizations": {
        "editor.background": "#11111b",
        "sideBar.background": "#11111b",
        "editorGutter.background": "#11111b",
        "terminal.background": "#11111b",
        "panel.background": "#11111b",
    }
}
