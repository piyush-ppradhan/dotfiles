{
    "breadcrumbs.enabled": false,
    
    "python.analysis.reportExtraTelemetry": false,
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.experimental.treeSitterTelemetry": false,
    "editor.lightbulb.enabled": "off",
    "editor.lineNumbers": "relative",
    "editor.fontFamily": "Consolas Nerd Font",
    "editor.fontSize": 16,
    "editor.folding": false,
    "editor.formatOnSave": false,
    "editor.guides.indentation": false,
    "editor.semanticHighlighting.enabled": false,
    "editor.minimap.enabled": false,
    "editor.rulers": [79],
    "editor.stickyScroll.enabled": false,


    "notebook.formatOnSave.enabled": true,

    "ruff.lint.ignore": ["E731"],

    "scm.diffDecorations": "none",

    "telemetry.telemetryLevel": "off",
    "terminal.integrated.fontSize": 16,

    "vim.handleKeys": {
        "<C-p>": false
    },
    "vim.useSystemClipboard": true,

    "window.commandCenter": false,
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "hidden",
    "window.zoomLevel": 0,

    "workbench.colorCustomizations": {
        "editor.background": "#f8f6d9",
        "sideBar.background": "#f8f6d9",
        "activityBar.background": "#f8f6d9",
        "statusBar.background": "#f8f6d9",
        "titleBar.activeBackground": "#f8f6d9",
        "tab.activeBackground": "#ecead1",
        "tab.inactiveBackground": "#f8f6d9",
        "editorGroupHeader.tabsBackground": "#f8f6d9",
    },
    "workbench.layoutControl.enabled": false,
    "workbench.startupEditor": "none",

    "[c]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.suggest.insertMode": "replace",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-vscode.cpptools",
    },
    "[cpp]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.suggest.insertMode": "replace"
    },
    "C_Cpp.clang_format_style": "Google",

    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace",
        "editor.formatOnSave": true,
    },

    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
    },
    "window.customTitleBarVisibility": "auto",
    "workbench.colorTheme": "Default Light Modern",
}
