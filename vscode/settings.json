{
    "breadcrumbs.enabled": false,

    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "editor.fontFamily": "FiraMono Nerd Font",
    "editor.fontSize": 17,
    "editor.folding": false,
    "editor.formatOnSave": false,
    "editor.guides.indentation": false,
    "editor.minimap.enabled": false,
    "editor.rulers": [79],
    "editor.semanticHighlighting.enabled": true,
    "editor.stickyScroll.enabled": false,

    "scm.diffDecorations": "none",

    "telemetry.telemetryLevel": "off",
    "terminal.integrated.fontSize": 16.5,

    "window.commandCenter": false,
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "hidden",

    "workbench.colorCustomizations": {
        "activityBar.background": "#050505",
        "editor.background": "#050505",
        "editorGroupHeader.tabsBackground": "#050505",
        "editorGutter.background": "#050505",
        "panel.background": "#050505",
        "sideBar.background": "#050505",
        "tab.activeBorderTop": "#050505",
        "tab.activeBorder": "#050505",
        "tab.inactiveBackground": "#050505",
        "titleBar.activeBackground": "#050505",
        "terminal.background": "#050505",
        "statusBar.background": "#101010",
        "statusBar.foreground": "#d3d1d1"
    },
    "workbench.colorTheme": "Ros√© Pine (no italics)",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.layoutControl.enabled": false,
    "workbench.startupEditor": "none",

    "[c]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.suggest.insertMode": "replace",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-vscode.cpptools",
    },
    "[cpp]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.suggest.insertMode": "replace"
    },
    "C_Cpp.clang_format_style": "Google",

    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace",
        "editor.formatOnSave": true,
    },

    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff"
    },

}
